<h2>Edit User <%= current_user.role %></h2> 

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), method: :put) do |f| %>
  <div class="form-row">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, value: resource.first_name, autofocus: true %>
    <br>
  </div>
  <br>
  <div class="form-row">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, value: resource.last_name %>
  </div>
  <br>
  <div class="form-row">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email", value: resource.email %>
  </div>
  <br>
  <div class="form-row">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <br>
  <div class="form-row">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br>
  <div class="form-row">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>